@model csharp_lend_pc.Models.PcEntity;
@{
    ViewData["Title"] = "機器詳細情報";
}
<div class="col-10 d-flex justify-content-between align-items-center">
    <h1>機器詳細情報</h1>
    <div class="d-flex">
        <a class="button_edit mr-3" href="/pc/edit/@Model.Id">編集</a>
        <a asp-action="Delete" asp-controller="pc" class="button_delete" asp-route-id="@Model.Id">削除</a>
    </div>
</div>


<div class="mt-5">
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">資産番号</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.Id)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">メーカー</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.Maker)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">OS</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.Os)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">メモリ</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.Memory)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">容量</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.Capacity)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">保管場所</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.StorageLocation)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">グラフィックボードの有無</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @(Model.HasGraphicBoard ? "有" : "無")            
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">故障の有無</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @(Model.IsBroken ? "有" : "無")            
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">リース開始日</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.LeaseStartAt)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">リース期限日</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.LeaseEndAt)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">棚卸日</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.InventoryAt)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">登録日</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.CreatedAt)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">更新日</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.UpdatedAt)
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-3">
            <h6 class="mb-0">備考</h6>
        </div>
        <div class="col-sm-9 text-secondary">
            @Html.DisplayFor(modelPc => modelPc.Remarks)
        </div>
    </div>
</div>